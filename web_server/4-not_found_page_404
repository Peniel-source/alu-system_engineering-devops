#!/usr/bin/env bash
# Script that configures Nginx server with a custom 404 page

# Update package list and install nginx
apt-get update -y
apt-get install nginx -y

# Create a simple HTML page with the required content
echo "Holberton School for the win!" > /var/www/html/index.html

# Create custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure custom 404 page
sed -i '/listen 80 default_server;/a \\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /var/www/html;\n\t}' /etc/nginx/sites-available/default

# Configure 301 redirect for /redirect_me
sed -i '/listen 80 default_server;/a \\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Restart nginx service
service nginx restart
